<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asteroidgame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_balls"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_balls"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GameScreen3"></activity>
        <activity android:name=".GameScreen2" />
        <activity android:name=".GameWin" />
        <activity android:name=".GameOver" />
        <activity android:name=".GameScreen1" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>